<h1><%= @dojo.name %></h1>
<br>
<a href='/'>Home</a> <a href='/dojos/edit/<%= @dojo.id %>'>Edit</a>
<br>
<br>
Adress: <%= @dojo.street %>
City: <%= @dojo.city %>
State: <%= @dojo.state %>

<h1>Student Roster</h1>

<table>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Actions</th>
    </tr>
<% @students.each do |student|%>
    <% if student.dojo.id == @dojo.id %>
    <tr>
    <td><%= student.first_name %></td>
    <td><%= student.last_name %></td>
    <td><%= student.email %></td>
    <td><a href='/dojos/<%= @dojo.id %>/students/<%= student.id %>'>Show</a>
    <a href='/dojos/<%= @dojo.id %>/edit/students/<%= student.id %>'>Edit</a>
    <form action="/dojos/<%= @dojo.id %>/students/<%= student.id %>" method='post'>
    <input type='hidden' name='_method' value='delete'>
    <input type='hidden' name='authenticity_token' value="<%= form_authenticity_token %>">
    <input type='submit' value='Destroy'>
    </form>
    </td>
    </tr>
    <% end %>
<% end %>

</table>
<br>
<br>
<a href='/dojos/<%= @dojo.id %>/students/new'>Add Student!</a>